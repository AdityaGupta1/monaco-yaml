{
  "name": "monaco-yaml",
  "version": "2.1.0",
  "description": "YAML plugin for the Monaco Editor",
  "scripts": {
    "compile": "rimraf ./out && tsc -p ./src/tsconfig.json",
    "watch": "tsc -p ./src --watch",
    "prepublish": "rimraf ./out && rimraf ./release && yarn compile && node ./scripts/bundle && mcopy ./src/monaco.d.ts ./release/monaco.d.ts",
    "lint": "prettier \"{src,test}/**/*.{json,scss,html,ts}\" --write",
    "test": "jest --verbose"
  },
  "author": "Kevin Decker <kpdecker@gmail.com> (http://incaseofstairs.com)",
  "maintainers": [
    "kpdecker",
    "pengx17"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pengx17/monaco-yaml"
  },
  "bugs": {
    "url": "https://github.com/pengx17/monaco-yaml/issues"
  },
  "typings": "./src/typings/refs.d.ts",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.9.3",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "js-yaml": "^3.12.0",
    "jsonc-parser": "^2.0.2",
    "lint-staged": "^8.1.0",
    "monaco-editor": "0.16.2",
    "monaco-plugin-helpers": "^1.0.2",
    "prettier": "^1.15.3",
    "requirejs": "^2.3.5",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "typescript": "^3.1.6",
    "uglify-es": "^3.3.9",
    "vscode-languageserver-types": "3.12.0",
    "yaml-language-server": "^0.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true
  },
  "lint-staged": {
    "linters": {
      "*.{json,scss,html,ts}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./test/tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/*.test.+(ts|js)"
    ]
  }
}
